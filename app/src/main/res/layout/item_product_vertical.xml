<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/iv_product_plp"
      android:layout_width="@dimen/width_image_plp"
      android:layout_height="@dimen/width_image_plp"
      android:layout_margin="@dimen/dp_8"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/ic_place_holder"
      />


  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_product_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dp_16"
      android:ellipsize="end"
      android:maxLines="2"
      android:text="Product Name"
      android:textColor="@color/color_4c"
      android:textSize="@dimen/sp_17"
      app:layout_constraintLeft_toRightOf="@id/iv_product_plp"
      app:layout_constraintTop_toTopOf="parent"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_offer_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_8"
      android:text="Rs. 12"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/sp_17"
      app:layout_constraintLeft_toLeftOf="@id/tv_product_name"
      app:layout_constraintTop_toBottomOf="@id/tv_product_name"
      />


  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_original_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dp_16"
      android:layout_marginTop="@dimen/dp_4"
      android:text="Rs. 10"
      android:textColor="@color/colorTextLight"
      android:textSize="@dimen/sp_12"
      app:layout_constraintBaseline_toBaselineOf="@id/tv_offer_price"
      app:layout_constraintLeft_toRightOf="@id/tv_offer_price"
      app:layout_constraintTop_toBottomOf="@id/tv_product_name"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/offer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_8"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="15% off"
      android:textColor="@color/color_f47621"
      android:textSize="@dimen/sp_13"
      app:layout_constraintLeft_toLeftOf="@id/tv_offer_price"
      app:layout_constraintTop_toBottomOf="@id/tv_offer_price"
      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_add_to_cart"
      android:layout_width="70dp"
      android:layout_height="@dimen/dp_32"
      android:layout_gravity="center"
      android:layout_margin="@dimen/dp_16"
      android:background="@drawable/bg_button"
      android:text="Add"
      android:textAllCaps="false"
      android:textColor="@color/color_ff"
      android:textSize="@dimen/sp_14"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />


  <View
      android:id="@+id/view8"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@drawable/divider_dotted_horizontal"
      android:layerType="software"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/iv_product_plp"
      />

</androidx.constraintlayout.widget.ConstraintLayout>